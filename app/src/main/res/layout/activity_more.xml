<?xml version="1.0" encoding="utf-8"?>
<com.appversal.appstorys.presentation.xml.ScreenView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f4">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/cashbook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_one"
                    android:contentDescription="Cashbook" />

            <ImageView
                    android:id="@+id/bills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_two"
                    android:contentDescription="Bills" />

            <ImageView
                    android:id="@+id/items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_three"
                    android:contentDescription="Items" />
        </LinearLayout>

        <ImageView
                android:id="@+id/more_bottom_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/more_bottom"
                android:contentDescription="Bottom Image" />

        <com.appversal.appstorys.presentation.xml.WidgetView
            android:id="@+id/tooltip_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.appversal.appstorys.presentation.xml.ScreenView>